<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:orientation="vertical"
                                                   android:padding="20dp" tools:layout_editor_absoluteY="-24dp"
                                                   android:descendantFocusability="blocksDescendants"
                                                   tools:layout_editor_absoluteX="-4dp">

    <TextView
            android:id="@+id/trip_id"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"/>


    <TextView
            android:id="@+id/trip_name"
            android:layout_width="314dp"
            android:layout_height="21dp"
            android:text="TripName"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/trip_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination" tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp"/>
    <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date" tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"/>
    <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date" tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp"/>
    <TextView
            android:id="@+id/is_require_risk_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is Require Risk Assessment"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"/>

    <ImageButton
            android:layout_width="27dp"
            android:focusable="false"
            android:layout_height="27dp" app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/button_delete"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>